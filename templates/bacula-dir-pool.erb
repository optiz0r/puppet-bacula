Pool {
    Name                 = <%= @name %>
    Pool Type            = <%= @pooltype %>
    Recycle              = <%= @recycle %>
<% if @recycle_pool -%>
    Recycle Pool         = <%= @recycle_pool %>
<% end -%>
<% if @scratch_pool -%>
    Scratch Pool         = <%= @scratch_pool %>
<% end -%>
    AutoPrune            = <%= @autoprune %>
<% if @volret -%>
    Volume Retention     = <%= @volret %>
<% end -%>
<% if @voluseduration -%>
    Volume Use Duration = <%= @voluseduration %>
<% end -%>
<% if @label -%>
    Label Format         = "<%= @label %>"
<% end -%>
<% if @maxvols -%>
    Maximum Volumes      = <%= @maxvols %>
<% end -%>
<% if @maxvoljobs -%>
    Maximum Volume Jobs  = <%= @maxvoljobs %>
<% end -%>
<% if @maxvolbytes -%>
    Maximum Volume Bytes = <%= @maxvolbytes %>
<% end -%>
<% if @storage -%>
    Storage              = <%= @storage %>-sd
<% end -%>
    Action On Purge      = <%= @purgeaction %>
<% if @next_pool -%>
    Next Pool            = <%= @next_pool %>
<% end -%>
}

